{
  "address": "http://localhost:8081",
  "objectMaxLimit": 100,

  "domain": "app.lifescope.io",

  "logging": {
    "severity": "trace",
    "targets": [
      {
        "type": "console",
        "formatter": "human"
      }
    ]
  },

  "caches": {
    "jobs": {
      "address": "redis://localhost:6379/0"
    }
  },

  "mongo": {
    "address": "mongodb://127.0.0.1",
    "options": {
      "poolSize": 5
    }
  },

  "cookieConsent": "cookieconsent",

  "sessions": {
    "cookieName": "sessionid",
    "expiration": 1209600
  },

  "csrf": {
    "saltLength": 64,
    "secretLength": 32
  },

  "staticfiles": {
    "directories": [
      "artifacts",
      "static"
    ],
    "path": "/static"
  },

  "templates": {
    "directory": "templates"
  },

  "api": {
    "key": "***INSERT BITSCOOP API KEY HERE***",
    "address": {
      "protocol": "http",
      "hostname": "localhost",
      "port": "8081",
      "host_header": {
        "main": "api.bitscoop.com",
        "subdomain": "provider.api.bitscoop.com"
      }
    }
  },

  "validationSchemas": "schemas/**/*.json"
}
